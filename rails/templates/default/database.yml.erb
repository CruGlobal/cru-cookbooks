<% (['development', 'production'] + [@environment]).uniq.each do |env| -%>
<%= env %>:
  adapter: <%= @database[:adapter] %>
  database: <%= @database[:database] %>
  encoding: utf8
  host: <%= @database[:host] || 'localhost' %>
