<% (['development', 'staging', 'production'] + [@environment]).uniq.each do |env| -%>
<%= env %>:
  sessions:
    default:
      database: <%= @mongoid['database'] %>
      hosts:
        - <%= @mongoid['host'] %>:27017
  options:
    identity_map_enabled: true
    use_utc: true
    raise_not_found_error: false
<% end %>

