check process sidekiq_<%= @app_name %>
  with pidfile <%= @deploy[:deploy_to] %>/shared/pids/sidekiq.pid
  start program = "/usr/bin/sudo su deploy -c 'cd <%= @deploy[:deploy_to] %>/current; PATH=/usr/local/bin:$PATH RAILS_ENV=<%= @deploy[:rails_env] %> bundle exec sidekiq -d -i 0 -C <%= @deploy[:deploy_to] %>/shared/config/sidekiq.yml -P <%= @deploy[:deploy_to] %>/shared/pids/sidekiq.pid -L log/sidekiq.log'" with timeout 90 seconds
  stop program = "/bin/bash -c 'cd <%= @deploy[:deploy_to] %>/current; bundle exec sidekiqctl stop <%= @deploy[:deploy_to] %>/shared/pids/sidekiq.pid 60'" with timeout 180 seconds
  group sidekiq_<%= @app_name %>
